<html>
  <head>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <title>Address Book: Edit Contact</title>
  </head>
  <body>
    <div class='container'>
      <div class="jumbotron">
        <h1>Address Book</h1>
      </div>
      <h2>Edit any of the contact fields below:</h2>
      <form action='/update_confirm'>
        <div class='row'>
          <div class='col-md-4'>
            <div class='form-group'>
              <input type='text' name='new_first_name' placeholder='{{ edit_contact.getFirstName }}' class='form-control' id='new_first_name'>
              <input hidden="true" name="edit_contact" value="{{ contact.getFirstName }}">
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_mid_init' placeholder='{{ edit_contact.getMidInit }}' class='form-control' id='new_mid-init'>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_last_name' placeholder='{{ edit_contact.getLastName }}' class='form-control' id='new_last_name'>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_street_num' placeholder='{{ edit_contact.getStreet }}' class='form-control' id='new_street_num'>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_city' placeholder='{{ edit_contact.getCity }}' class='form-control' id='new_city'>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_state' placeholder='{{ edit_contact.getState }}' class='form-control' id='new_state'>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_zip' placeholder='{{ edit_contact.getZip }}' class='form-control' id='new_zip'>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group'>
              <input type='text' name='new_mobile' placeholder='{{ edit_contact.getMobile }}' class='form-control' id='new_mobile'>
            </div>
          </div>
          <div class='col-md-4'>
            <div class='form-group'>
              <input type='text' name='new_email' placeholder='{{ edit_contact.getEmail }}' class='form-control' id='new_email'>
            </div>
          </div>
        </div>
        <input hidden='true' name='edited_contact' value='{{ edit_contact.getIndex }}'>
        <button type='submit' class='btn btn-info'>Save Edits</button>
      </form>
      <form action='/single_delete'>
        <input hidden='true' name='deleted_contact' value='{{ edit_contact.getIndex }}'>
        <button type="submit" class="btn btn-danger">Delete Contact!</button>
      </form>
    </div>
  </body>
</html>
