<html>
<head>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <title>Address Book 2.0</title>
</head>
<body>
    <div class='container'>
        <h1>Address Book</h1>
        <h2>Add a new contact below:</h2>
        <form action='/create_contact' method='post'>
            <div class='form-group'>
                <label for='first_name'>First Name: </label>
                <input type='text' name='first_name' class='form-control' id='first_name'>
            </div>
            <div class='form-group'>
                <label for='last_name'>Last Name: </label>
                <input type='text' name='last_name' class='form-control' id='last_name'>
            </div>
            <div class='form-group'>
                <label for='street_num'>Street Number: </label>
                <input type='text' name='street_num' class='form-control' id='street_num'>
            </div>
            <div class='form-group'>
                <label for='city'>City: </label>
                <input type='text' name='city' class='form-control' id='city'>
            </div>
            <div class='form-group'>
                <label for='state'>State: </label>
                <input type='text' name='state' class='form-control' id='state'>
            </div>
            <div class='form-group'>
                <label for='zip'>Zip Code: </label>
                <input type='text' name='zip' class='form-control' id='zip'>
            </div>
            <div class='form-group'>
                <label for='mobile'>Mobile #: </label>
                <input type='text' name='mobile' class='form-control' id='mobile'>
            </div>
            <div class='form-group'>
                <label for='email'>Email Address: </label>
                <input type='text' name='email' class='form-control' id='email'>
            </div>
            <button type='submit' class='btn'>Add</button>
        </form>
        <form action='/delete_contacts' method='post'>
            <button type='submit' name='btn'>Delete All Contacts!</button>
        </form>

        {% if contacts is not empty %}
            <h2>Contacts:</h2>
            {% for contact in contacts %}
                <h3> {{ contact.getLastName }}, {{ contact.getFirstName }} </h3>
                <p>
                    Address: {{ contact.getStreet }} <br>
                    {{ contact.getCity }}, {{ contact.getState }} | {{ contact.getZip }} <br>
                    Mobile: {{ contact.getEmail }} <br>
                    Email: {{ contact.getEmail }}
                </p>
            {% endfor %}
        {% endif %}
    </div>
</body>
</html>
